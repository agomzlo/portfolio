---
import { projects } from "../data/projects.json";
import Link from "../icons/Link.astro";
---

<section id="projects" class="flex flex-col items-center justify-center scroll-mt-[100px]">
    <div class="flex flex-col justify-center max-w-7xl px-5 py-8 lg:py-16 gap-6">
        <h2 class="text-2xl lg:text-4xl font-bold text-title">Proyectos</h2>
        <span class="size-full grid grid-cols-1 lg:grid-cols-2 gap-5 lg:gap-10">
            {projects.map((project) => (
                <a href={project.link} target="_blank" class="group relative rounded-2xl overflow-hidden">
                    <img class="-z-10 size-full object-cover group-hover:scale-105 transition-all" src={project.img} alt={project.title} />
                    <div class="absolute inset-0 p-4 bg-black/60 flex flex-col justify-end opacity-0 group-hover:opacity-100 transition-all">
                        <h2 class="text-xl lg:text-2xl font-bold text-title">{project.title}</h2>
                        <p class="text-text text-sm lg:text-base">{project.description}</p>
                        <Link class="absolute top-4 right-4 size-6 lg:size-8 text-white" />
                    </div>
                </a>
            ))}
        </span>
    </div>
</section>