---
import ExperienceTimelinePoint from "../components/ExperienceTimelinePoint.astro";
import { experience } from "../data/experience.json";
---

<section id="experience" class="flex flex-col items-center justify-center scroll-mt-[100px]">
    <div class="flex flex-col justify-center size-full max-w-7xl px-5 py-8 lg:py-16 gap-6">
        <h2 class="text-2xl lg:text-4xl font-bold text-title">Experiencia</h2>
        {
            experience.map((item, index) => (
                <ExperienceTimelinePoint item={item} index={index} experienceLength={experience.length} />
            ))
        }
    </div>
</section>