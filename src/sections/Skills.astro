---
import SkillCard from "../components/SkillCard.astro";
import { skills } from "../data/skills.json";
---

<section id="skills" class="flex flex-col items-center justify-center scroll-mt-[100px]">
    <div class="flex flex-col justify-center max-w-7xl px-5 py-8 lg:py-16 gap-6 w-full">
        <h2 class="text-2xl lg:text-4xl font-bold text-title">Conocimientos en</h2>
        <span class="flex flex-wrap justify-center gap-6 w-full">
            {skills.map((skill) => (
                <SkillCard {...skill} />
            ))}
        </span>
    </div>
</section>